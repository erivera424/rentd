<div class="container my-3">
  <%= link_to "Go Back", items_path, class: "button" %>
</div>

<div class="top-bar">
  <h1 class="center-text">Item Specs</h1>
</div>

<div class="container show-container">
  <div class="carousel-spacing">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <% if @item.photos.attached? %>
          <% @item.photos.each_with_index do |photo, index| %>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" class="<%= "active" if index == 0 %>" aria-current="<%= "true" if index == 0 %>" aria-label="Slide <%= index + 1 %>"></button>
          <% end %>
        <% end %>
      </div>
      <div class="carousel-inner">
        <% if @item.photos.attached? %>
          <% @item.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= "active" if index == 0 %>">
              <%= cl_image_tag photo.key, class: "d-block w-100 carousel-img" %>
            </div>
          <% end %>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <%= link_to "RENT", new_item_booking_path(@item), class: "rent-button" %>
  <h2><%= @item.title %></h2>

  <h3>Daily rental price</h3>
  <p>$<%= @item.price %></p>
</div>

  <div class="product-details">
    <h3>Product Details</h3>
    <p><strong>Description: </strong> <%= @item.description %></p>
    <p><strong>Category: </strong> <%= @item.category %></p>
    <p><strong>Brand: </strong> <%= @item.brand %></p>
    <p><strong>Fabric details: </strong> <%= @item.fabric_details %></p>
    <p><strong>Size: </strong> <%= @item.size %></p>
    <p><strong>Original price $: </strong> <%= @item.original_price %></p>
  </div>

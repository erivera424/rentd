<div class="container home">
  <div class="buttons">
    <% if user_signed_in? %>
      <%= link_to "logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "button" %>
    <% else %>
        <%= link_to "sign up", new_user_registration_path, class: "button" %>
        <%= link_to "log in", new_user_session_path, class: "button" %>
    <% end %>
  </div>

  <div class="position-reltive">
    <h1>Fashion with a purpose: <span class="text-orange">Rent, Reuse</span>, and make a Sustainable Statement!</h1>
    <div class="green-logo">
      <%= image_tag "greenlogo1.png", width: 300 %>
    </div>
  </div>

  <%= link_to "Get started", items_path, class: "orange-button" %>

  <div class="images">
    <%= image_tag "dresses1.png" %>
    <%= image_tag "dresses2.png" %>
    <%= image_tag "dresses3.png" %>
  </div>

   <%= image_tag "logo2.png", width: 200 %>
</div>
